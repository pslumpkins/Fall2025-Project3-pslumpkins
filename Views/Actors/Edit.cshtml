@model Fall2025_Project3_pslumpkins.Models.Actor
@{
    ViewData["Title"] = "Edit Actor";
}

<h1>Edit Actor</h1>
<hr />

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ActorImdb" class="form-label">IMDB URL</label>
        <input asp-for="ActorImdb" class="form-control" />
        <span asp-validation-for="ActorImdb" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Gender" class="form-label"></label>
        <input asp-for="Gender" class="form-control" />
        <span asp-validation-for="Gender" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Age" class="form-label"></label>
        <input asp-for="Age" class="form-control" type="number" />
        <span asp-validation-for="Age" class="text-danger"></span>
    </div>

    <div class="mb-2" id="photoPreview">
        @if (Model.Photo != null && Model.Photo.Length > 0)
        {
            var b64 = Convert.ToBase64String(Model.Photo);
            <img src="data:image/jpeg;base64,@b64" alt="Current Photo" style="max-height:200px;border-radius:8px;" />
        }
        else
        {
            <span class="text-muted">No photo uploaded.</span>
        }
    </div>

    <div class="mb-3">
        <label class="form-label">Upload New Photo</label>
        <input type="file" name="photoFile" id="photoFile" class="form-control" accept="image/*" />
        <div class="form-text">Selecting a new file will replace the existing photo.</div>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-link">Back to List</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
