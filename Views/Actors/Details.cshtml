@model Fall2025_Project3_pslumpkins.Models.ViewModels.ActorDetailsVM
@using System

@{
    ViewData["Title"] = Model.Actor.Name;
    string AvgBadge(double s) =>
        s >= 0.5 ? "bg-success" : (s <= -0.25 ? "bg-danger" : "bg-warning text-dark");
}

<h1>@Model.Actor.Name</h1>

<div class="row g-4 mt-1">
    <div class="col-md-3">
        @if (Model.Actor.Photo?.Length > 0)
        {
            var b64 = Convert.ToBase64String(Model.Actor.Photo);
            <img src="data:image/jpeg;base64,@b64" alt="Photo" class="img-fluid rounded shadow-sm" />
        }
        else
        {
            <div class="text-muted fst-italic">No photo uploaded.</div>
        }

        <dl class="mt-3">
            <dt class="text-muted">Gender</dt>
            <dd>@Model.Actor.Gender</dd>
            <dt class="text-muted">Age</dt>
            <dd>@Model.Actor.Age</dd>
        </dl>

        @if (!string.IsNullOrWhiteSpace(Model.Actor.ActorImdb))
        {
            <div class="mt-2">
                <a href="@Model.Actor.ActorImdb" target="_blank" rel="noopener" class="btn btn-outline-secondary btn-sm">
                    View on IMDB
                </a>
            </div>
        }
        <div class="mt-3">
            <a asp-action="Edit" asp-route-id="@Model.Actor.Id" class="btn btn-primary btn-sm me-2">Edit</a>
            <a asp-action="Index" class="btn btn-link btn-sm">Back to List</a>
        </div>
    </div>

    <div class="col-md-9">
        <h3>Movies</h3>
        @if (Model.Movies.Count == 0)
        {
            <div class="text-muted">No movies linked to this actor yet.</div>
        }
        else
        {
            <ul class="list-unstyled">
                @foreach (var m in Model.Movies)
                {
                    <li>• @m.Title (@m.Year)</li>
                }
            </ul>
        }

        <h3 class="mt-4">
            Overall Sentiment:
            <span class="badge @AvgBadge(Model.AverageCompound)">
                @Model.AverageCompound.ToString("0.000")
            </span>
        </h3>

        <table class="table align-middle">
            <thead>
                <tr>
                    <th style="width:70%">AI “Tweets”</th>
                    <th class="text-end">Vadersharp Sentiment</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var t in Model.Tweets)
                {
                    var badge = AvgBadge(t.Compound);
                    <tr>
                        <td>@t.Tweet</td>
                        <td class="text-end">
                            <span class="badge @badge">@t.Compound.ToString("0.0000")</span>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
